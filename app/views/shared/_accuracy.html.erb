<!-- About Section -->
    <section id="content" class="bg-light-gray">
        <div class="container">
            <div class="row">

            
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Historical Accuracy</h2>
                    <h3 class="section-subheading text-muted"><p>Here you will find a list of the movies depicted on this website and the trends of the importance of historical accuracy in World War II films.</p><p>The most accurate movies were produced during the early to mid Cold War era(with exception to Band of Brothers)where as the least accurate movies have been more recent movies.
                    </p>

                    </h3>
                   
                </div>
            </div>


            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                        <li>
                           
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="/assets/the-longest-day.jpg" alt="The Longest Day">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                      
                                    <h4>Very Accurate</h4>
                                 
                                </div>
                                <div class="timeline-body">
                                        <% accurate_movies = @accurate_hash["very_accurate"] %>
                                        <% accurate_movies.each do |movie| %>
                                        <p class = "text-muted">
                                            <%=movie.name%> ( <%=movie.year%> )
                                        </p>
                                        <% end %>
                                </div>
                            </div>
                        </li>
                        <li class="timeline-inverted">
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="/assets/band-of-brothers.jpg" alt="Band of brothers">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                        
                                    <h4>Accurate</h4>
                                   
                                </div>
                               <div class="timeline-body">
                                         <% accurate_movies = @accurate_hash["accurate"] %>
                                        <% accurate_movies.each do |movie| %>
                                       <p class = "text-muted">
                                            <%=movie.name%> ( <%=movie.year%> )
                                        </p>
                                        <% end %>                                 
                            </div>
                        </li>
                        <li>
                            <div class="timeline-image">
                                 <img class="img-circle img-responsive" src="/assets/pearl-harbor.jpg" alt="Pearl Harbor">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                
                                    <h4>Modest Accuracy</h4>
                                </div>
                                <div class="timeline-body">
                                 
                                          <% accurate_movies = @accurate_hash["medium_accurate"] %>
                                        <% accurate_movies.each do |movie| %>
                                        <p class = "text-muted">
                                            <%=movie.name%> ( <%=movie.year%> )
                                        </p>
                                        <% end %>
                              
                            </div>
                        </li>
                        <li class="timeline-inverted">
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="/assets/tripoli.jpg" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4>Pure Fiction</h4>
                                    
                                </div>
                                <div class="timeline-body">
                              
                                        <% accurate_movies = @accurate_hash["fiction"] %>
                                        <% accurate_movies.each do |movie| %>
                                        <p class = "text-muted">
                                            <%=movie.name%> ( <%=movie.year%> )
                                        </p>
                                        <% end %>
                           
                                </div>
                            </div>
                        </li>
                       
                    </ul>
                </div>
             </div>   


            
             
       
        </div>
    </section>


       