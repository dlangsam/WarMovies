<!-- Portfolio Grid Section -->
    <section id="movies">
        <div class="container" >
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">The Movies</h2>
              
                </div>
            </div>
            <div class="row">
                
               
                <% @movies.each do |movie| %>
                 <div class="col-md-4 col-sm-6 portfolio-item">
                     <a href="#"  class="portfolio-link js-show-movie" data-movie-uri="<%= movie.id %>" data-toggle="modal">
                    <div class="portfolio-hover">
                    <div class="portfolio-hover-content">
                         <i class="fa fa-plus fa-3x"></i>
                    </div>
                    </div>
                    <% image = movie.main_image %>
                    <% if image != nil %>
                     <img src="<%=image.url%>" class="move-poster img-responsive" alt = "<%=movie.name%>" />
                     <%end %>
                         </a>
                <div class="portfolio-caption">
                        <h4><%=movie.name%></h4>
                <p class="text-muted"><%=movie.year%></p>
                </div>
                  </div>
                   <%end%>
              
            </div>
        </div>

        <div id = "classics" class="container">
            <div class="row">

                <div class="col-lg-12 text-center">
                <br>
                    <h2 class="section-heading">The Classics</h2>
               
                </div>
            </div>
            <div class="row">

            <% @classics.each do |movie| %>
                 <div class="col-md-4 col-sm-6 portfolio-item">
                     <a class="portfolio-link js-show-movie" data-movie-uri="<%= movie.id %>"
                     data-toggle="modal">
                    <div class="portfolio-hover">
                    <div class="portfolio-hover-content">
                         <i class="fa fa-plus fa-3x"></i>
                    </div>
                    </div>
                    <% image = movie.main_image %>
                    <% if image != nil %>
                     <img src="<%=image.url%>" class="move-poster img-responsive" alt = "<%=movie.name%>" />
                     <% end %>
                         </a>
                <div class="portfolio-caption">
                        <h4><%=movie.name%></h4>
                <p class="text-muted"><%=movie.year%></p>
                </div>
                  </div>
                   <%end%>
                    
            </div>
        </div>
    </section>